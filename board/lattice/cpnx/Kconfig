if TARGET_LATTICE_RISCV

config SYS_CPU
	default "generic"

config SYS_BOARD
	default "cpnx"

config SYS_VENDOR
	default "lattice"

config SYS_CONFIG_NAME
	default "lattice-riscv"

config TEXT_BASE
	default 0x80100000 if SPL
	default 0x80100000 if !RISCV_SMODE
	default 0x80100000 if RISCV_SMODE

config SPL_TEXT_BASE
	default 0x00000000

config BOARD_SPECIFIC_OPTIONS # dummy
	def_bool y
	select GENERIC_RISCV
	select SUPPORT_SPL
	imply CMD_CPU
	imply CMD_DHCP
	imply CMD_GPIO
	imply CMD_NET
	imply CMD_PING
	imply CMD_SF
	imply DM_GPIO
	imply MII
	imply PHY_LIB
	imply PHY_MSCC

endif
